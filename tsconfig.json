{
    "compilerOptions": {
      "target": "es6",
      "module": "ES6",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "declaration": true,
      "declarationDir": "dist",
      "outDir": "dist"
    },
    "files": ["src/index.ts"],
    "include": ["src/**/*.ts", "src/**/*.d.ts"],
    "exclude": ["node_modules", "tests", "/*/**/__tests__/*"]
  }